# OP_CMS Environment Configuration
# Copy this file to .env and customize for your environment

# ==================== Database Configuration ====================
MYSQL_ROOT_PASSWORD=CHANGE_ME_IN_PRODUCTION
MYSQL_DATABASE=op_cms
MYSQL_USER=op_cms_user
MYSQL_PASSWORD=CHANGE_ME_IN_PRODUCTION
MYSQL_PORT=3306

# ==================== Redis Configuration ====================
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ==================== Backend Configuration ====================
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_generate_a_secure_random_key
DEBUG=False
DATABASE_URL=mysql+pymysql://op_cms_user:CHANGE_ME_IN_PRODUCTION@mysql:3306/op_cms
REDIS_URL=redis://:CHANGE_ME_IN_PRODUCTION@redis:6379/0

# ==================== Frontend Configuration ====================
FRONTEND_PORT=80
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_TITLE=OP_CMS

# ==================== Celery Configuration (Optional) ====================
# CELERY_BROKER_URL=redis://:SecureRedisPassword789!@redis:6379/0
# CELERY_RESULT_BACKEND=mysql+pymysql://op_cms_user:SecureUserPassword456!@mysql:3306/op_cms

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# ==================== Timezone ====================
TZ=Asia/Shanghai
